source 'https://rubygems.org'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.0.0'

gem 'rails-api'

gem 'pg'
gem 'acts_as_commentable'
gem 'acts_as_votable'
gem 'devise'

group :development, :test do
  gem 'pry'
  gem 'pry-remote'
end

group :test do
  gem 'rspec-rails'
  gem 'rspec-mocks'
  gem 'factory_girl_rails'
end

